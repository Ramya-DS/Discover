                <EditText
                    android:id="@+id/filter_runtime"
                    style="@style/EditTextStyle"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Runtime"
                    android:inputType="number" />

                <ImageView
