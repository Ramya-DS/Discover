<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".category.MediaCategoryActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/category_toolbar"
        style="@style/ToolbarStyle"
        app:navigationIcon="@drawable/ic_back" />

    <FrameLayout
        android:id="@+id/media_category_network_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/media_category_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/category_title_1"
                    style="@style/subHeadingText" />

                <FrameLayout
                    android:id="@+id/category_container_1"
                    style="@style/categoryContainerStyle" />

                <TextView
                    android:id="@+id/category_title_2"
                    style="@style/subHeadingText" />

                <FrameLayout
                    android:id="@+id/category_container_2"
                    style="@style/categoryContainerStyle" />

                <TextView
                    android:id="@+id/category_title_3"
                    style="@style/subHeadingText" />

                <FrameLayout
                    android:id="@+id/category_container_3"
                    style="@style/categoryContainerStyle" />

                <TextView
                    android:id="@+id/category_title_4"
                    style="@style/subHeadingText" />

                <FrameLayout
                    android:id="@+id/category_container_4"
                    style="@style/categoryContainerStyle" />

                <TextView
                    android:id="@+id/category_title_5"
                    style="@style/subHeadingText" />

                <FrameLayout
                    android:id="@+id/category_container_5"
                    style="@style/categoryContainerStyle" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>